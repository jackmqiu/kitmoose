<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Starter Kit</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/kits" method="POST">
                <label>Kit Name</label>
                <div class="form-group">
                    <input class="form-control" type="text" name="kitName" placeholder="Kit name">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="productName1" placeholder="product 1 Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="link1" placeholder="item 1 link">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image1" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="productName2" placeholder="product 2 Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="link2" placeholder="item 2 link">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image2" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="productName3" placeholder="product 3 Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="link3" placeholder="item 3 link">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image3" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="productName4" placeholder="product 4 Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="link4" placeholder="item 4 link">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image4" placeholder="image url">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/kits">Go Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>

