<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Starter Kit</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/kits/<%=kit._id%>/edit?_method=PUT" method="POST">
                <label>Kit Name</label>
                <div class="form-group">
                    <input class="form-control" type="text" name="kitName" value = "<%=kit.kitName%>">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value = "<%=kit.description%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="productName1" value = "<%=kit.productNames[0]%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="link1" value = "<%=kit.links[0]%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image1" value ="<%=kit.images[0]%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="productName2" value = "<%=kit.productNames[1]%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="link2" value = "<%=kit.links[1]%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image2" value = "<%=kit.images[1]%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="productName3" value = "<%=kit.productNames[2]%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="link3" value = "<%=kit.links[2]%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image3" value = "<%=kit.images[2]%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="productName4" value = "<%=kit.productNames[3]%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="link4" value = "<%=kit.links[3]%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image4" value = "<%=kit.images[3]%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/kits">Go Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>

